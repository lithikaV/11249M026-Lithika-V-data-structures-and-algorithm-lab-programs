#include <stdio.h>

int main() {
    int arr[100], n, key, low, high, mid, found = 0;

    // Step 1: Get the number of elements
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    // Step 2: Get sorted array elements
    printf("Enter %d elements in sorted order:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Step 3: Get the element to search
    printf("Enter the element to search: ");
    scanf("%d", &key);

    // Step 4: Initialize variables
    low = 0;
    high = n - 1;

    // Step 5: Binary search logic
    while (low <= high) {
        mid = (low + high) / 2;

        if (arr[mid] == key) {
            printf("Element %d found at position %d.\n", key, mid + 1);
            found = 1;
            break;
        } else if (arr[mid] > key) {
            high = mid - 1;
        } else {
            low = mid + 1;
        }
    }

    // Step 6: Element not found case
    if (!found) {
        printf("Element %d not found in the array.\n", key);
    }

    return 0;
}
